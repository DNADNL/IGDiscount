# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# API Registration
POST    /simpleUser/create      controllers.RegistrationUserController.registrationSimpleUser
POST    /sellerCompany/create   controllers.RegistrationUserController.registrationSellerCompany
POST    /admin/create           controllers.RegistrationUserController.registrationAdmin

#API Sign In
POST    /signin     controllers.SignInController.signIn
POST    /signinFacebook     controllers.SignInController.signInFacebook

#API Manage User
GET     /simpleUser/:id             controllers.ManageUserController.getSimpleUser(id : Long)
GET     /sellerCompany/:id          controllers.ManageUserController.getSellerCompany(id : Long)
GET     /admin/:id                  controllers.ManageUserController.getAdmin(id : Long)
GET     /simpleUser                 controllers.ManageUserController.getAllSimpleUser
GET     /sellerCompany              controllers.ManageUserController.getAllSellerCompany
GET     /admin                      controllers.ManageUserController.getAllAdmin
DELETE     /simpleUser/delete/:id       controllers.ManageUserController.deleteSimpleUser(id: Long)
DELETE     /sellerCompany/delete/:id    controllers.ManageUserController.deleteSellerCompany(id: Long)
DELETE     /admin/delete/:id            controllers.ManageUserController.deleteAdmin(id: Long)
PUT     /simpleUser/update        controllers.ManageUserController.updateSimpleUserWithoutPassword
PUT     /sellerCompany/update     controllers.ManageUserController.updateSellerCompanyWithoutPassword
PUT     /admin/update             controllers.ManageUserController.updateAdminWithoutPassword
PUT     /simpleUser/update/password        controllers.ManageUserController.updateSimpleUserPassword
PUT     /sellerCompany/update/password     controllers.ManageUserController.updateSellerCompanyPassword
PUT     /admin/update/password             controllers.ManageUserController.updateAdminPassword

#API Utils
GET     /kindOfUser                 controllers.UtilsController.kindOfUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET		/registration				controllers.Assets.at(path="/public/html", file="registration.html")
GET     /                           controllers.Assets.at(path="/public/html", file="index.html")
GET		/connection				    controllers.Assets.at(path="/public/html", file="connection.html")
GET		/account				    controllers.Assets.at(path="/public/html", file="modifyAccount.html")
GET		/accounts				    controllers.Assets.at(path="/public/html", file="adminAccount.html")
GET		/js/*file				    controllers.Assets.at(path="/public/javascripts", file)
GET		/lib/*file				    controllers.Assets.at(path="/public/lib", file)

# A supprimer
GET     /install                    controllers.HomeController.createUser
GET     /test                    controllers.HomeController.test
GET		/oauth/*file				    controllers.Assets.at(path="/public/oauth", file)
